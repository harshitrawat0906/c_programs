to read negative number 

#include <stdio.h>

int main()
{
    int a[5],i;
    for (i=0;i<=4;i++)
    {
        scanf("%d",&a[i]);
    }
    for (i=0;i<=4;i++)
    {
        if (a[i]<0)
        {
            printf("%d",a[i]);
        }
    }

    return 0;
}
_____________________________________________________________________________________________________
to add all the elements of aray
#include <stdio.h>

int main()
{
    int a[5],i,s=0;
    for (i=0;i<=4;i++)
    {
        scanf("%d",&a[i]);
    }
    for (i=0;i<=4;i++)
    {
        s=s+a[i];
    }
    printf("%d",s);

    return 0;
}
_________________________________________________________________________________________________________________
find max in array
#include <stdio.h>

int main()
{
    int a[5],i,s=0;
    for (i=0;i<=4;i++)
    {
        scanf("%d",&a[i]);
    }
    for (i=0;i<=4;i++)
    {
        if(a[i]>s)
        {
            s=a[i];
        }
        
    }
    printf("%d",s);
    

    return 0;
}
______________________________________________________________________________________
min ana max both in array
#include <stdio.h>

int main()
{
    int a[5],i,s,w;
    for (i=0;i<=4;i++)
    {
        scanf("%d",&a[i]);
    }
    
    for (i=1;i<=4;i++)
    {
        if(a[i]>s)
        {
            s=a[i];
        }
        if(a[i]<w)
        {
            w=a[i];
        }
        
    }
    printf("%d\n%d",s,w);
    

    return 0;
}
