ques- to check prime
#include <stdio.h>

int main()
{
    int a,b,r=1,n=0;
    scanf("%d",&a);
    while (r<=a)
    {
        if (a%r==0)
        {
          n++;
          
        }
        r++;
        
    } 
    if (n==2)
    {
       printf("prime");
    }
    else
    {
       printf("not prime");
    }
    

    return 0;
}
